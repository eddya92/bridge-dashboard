<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="modaleCarrello">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{% trans %}Se si decide di proseguire,verranno svuotati tutti i carrelli per crearne uno nuovo.{% endtrans %}</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-footer">
                <a href="{{ path('shop') }}" class="btn btn-secondary" >{% trans %}Continua con il vecchio carrello{% endtrans %}</a>
                <a  href="{{ path('crea-nuovo-ordine') }}" class="btn btn-primary" type="submit">{% trans %}Crea un nuovo carrello{% endtrans %}</a>
            </div>
        </div>
    </div>
</div>