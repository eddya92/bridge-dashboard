                <div id="div_totali" class="row m-0 chart-main">
                    <div class="col-xl-2 col-md-6 col-sm-6 p-0 box-col-6">
                        <div class="media align-items-center">

                            <div class="media-body">
                                <div class="right-chart-content" data-bs-toggle="tooltip" data-bs-placement="bottom"
                                     title="  ">
                                    <span>  </span>
                                        <div class="div_totali_text">
                                        </div>
                                        <div class="div_totali_value">
                                            <h4>  </h4>
                                        </div>
                                    <span><a href="/ ">  </a></span>
                                    <hr class="d-block d-sm-none"/>
                                </div>
                            </div>

                        </div>
                    </div>
                   {% for totale in totali | slice(1) %}
                        <div class="col-xl-2 col-md-6 col-sm-6 p-0 box-col-6">
                            <div class="media align-items-center">

                                <div class="media-body">
                                    <div class="right-chart-content" data-bs-toggle="tooltip" data-bs-placement="bottom"
                                         title=" {{ totale.dettaglio }} ">
                                        <span> {{ totale.titolo }} </span>
                                         {% if totale.valore == "" %}
                                            <div class="div_totali_text">
                                                 {{ totale.dettaglio }}
                                            </div>
                                         {% else %}
                                            <div class="div_totali_value">
                                                <h4> {{ totale.valore }} </h4>
                                            </div>
                                         {% endif %}
                                        <span><a href="/{{ app.request.locale }}{{ totale.link }} "> {{ totale.button }} </a></span>
                                        <hr class="d-block d-sm-none"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
