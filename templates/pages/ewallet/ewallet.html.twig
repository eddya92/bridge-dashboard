			}).start();
		});
    </script>
    <script>

		function validationFields(){
			document.getElementById('erroriSaldo').innerHTML = '';
			var minimo = parseFloat(document.getElementById('cifraMinimaConsenita').innerHTML);
			var saldo = parseFloat(document.getElementById('saldo').innerHTML);
			var value = parseFloat($("#valueSaldo").val());

			if($("#valueSaldo").hasClass('is-invalid')){
				$("#valueSaldo").removeClass('is-invalid');
			}
			if(value > saldo){
				$("#valueSaldo").addClass('is-invalid');
				document.getElementById('erroriSaldo').innerHTML += 'Non possiedi questa cifra';
				return false;
			}
			if(value < minimo){
				$("#valueSaldo").addClass('is-invalid');
				document.getElementById('erroriSaldo').innerHTML += 'Cifra troppo bassa';
				return false;
			}
			$("#valueSaldo").removeClass('is-invalid');
			$("#valueSaldo").addClass('border-success ');
			return true;
		}

		//Controlli custom di validazione
		//Controlli del validatore standard
		window.addEventListener('load', function(){
			var forms = document.getElementsByClassName('needs-validation');
			var validation = Array.prototype.filter.call(forms, function(form){
				form.addEventListener('submit', function(event){
					var result_checkOtherValidity = validationFields();
					if(result_checkOtherValidity === true){
						form.classList.add('was-validated');
					} else{
						event.preventDefault();
						event.stopPropagation();
					}
				}, false);
			});
		}, false);
    </script>

