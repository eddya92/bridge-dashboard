{% extends 'layouts/interno.html.twig' %}

{% block title %}{% trans %}Ingresso{% endtrans %}{% endblock %}

{% block page_body %}
    <div class="page-body">
        <!-- region titolo e breadcrumb -->
        <div class="container-fluid">
            {% include 'layouts/partials/session_message.html.twig' %}

            <div class="page-title">
                <div class="row">
                    <div class="col-sm-6 order-sm-1">
                        <div class="mb-3 d-block d-sm-none"></div>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('ingresso') }}"><i data-feather="home"></i></a>
                            </li>
                            <li class="breadcrumb-item">{% trans %}Area riservata{% endtrans %}</li>
                            <li class="breadcrumb-item active">{% trans %}Ingresso{% endtrans %}</li>
                        </ol>
                        <div class="mb-2 d-block d-sm-none"></div>
                    </div>
                    <div class="col-sm-6 order-sm-0">
                        <div class="float-sm-start">
                            <h3>{% trans %}Benvenuto{% endtrans %} {{ account.nome }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- endregion Titolo e breadcrumb -->
        <!-- Container-fluid starts-->
        <div id="top5_carriera_sponsor" class="container-fluid">
            <div id="first_row" class="row second-chart-list third-news-update">
                <div class="row" id="row_data">
                    <div class="col-xl-4">
                        {{ notiziePrincipali(app.request.locale) }}
                    </div>
                    <div class="col-xl-8">
                        <div class="card resize_equal_height resize_equal_height_xl resize_equal_height_xxl" style="background-image: url('/assets/images/bg_become_affiliate.jpg'); background-position: left bottom; background-size: cover">
                            <div class="card-header">
                                <h5 class="card-title mb-0">{% trans %} Guadagna con noi{% endtrans %}</h5>
                                <div class="card-options">
                                    <a class="card-options-collapse" href="#" data-bs-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a><a class="card-options-remove" href="#" data-bs-toggle="card-remove"><i class="fe fe-x"></i></a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="m-t-10"></div>
                                    <h5>{% trans %}Diventa un distributore indipendente{% endtrans %}</h5>
                                    <p>{% trans %}e scopri le opportunità di guadagno a te riservate aderendo al nostro team{% endtrans %}</p>
                                    <div class="col-md-8 float-start">
                                        <div class="m-t-40"></div>
                                        <style>
                                            #div_guadagna_con_noi i{
                                                color: green;
                                            }
                                            #div_guadagna_con_noi p{
	                                            display: flex;
                                            }
                                        </style>
                                        <div id="div_guadagna_con_noi">
                                        {% trans %}html guadagna con noi{% endtrans %}
                                        </div>
                                    </div>
                                    <div class="col-md-4 float-end text-center">
                                        <img class="m-auto width_100" style="max-width: 220px;" src="/assets/images/icon_become_affiliate.png" alt="{% trans %}Diventa un collaboratore{% endtrans %}">
                                        <div class="m-t-40"></div>
                                        <a target="_blank" href="{{ path('registrazione-ibo') }}">
                                            <button type="button" class="m-auto btn btn-primary">{% trans %}Diventa un collaboratore{% endtrans %}</button>
                                        </a>
                                    </div>
                                    <div class="m-t-40"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- region TOP5 -->
                    <div class="col-xl-4 xl-50 news box-col-6">
                        <div class="card height_100">
                            <div id="piu_venduti_header" class="card-header">
                                <div class="header-top">
                                    <h5 class="m-0">{% trans %}I più venduti{% endtrans %}</h5>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="our-product">
                                    <div class="table-responsive">
                                        <table id="best-products" class="table table-bordernone table-td-vertical-align-middle">
                                            <div class="m-t-20"></div>
                                            <tbody class="f-w-500">
                                            {% for articoloPiuVenduto in articoliPiuVenduti %}
                                                <tr>
                                                    <td>
                                                        <div class="media">
                                                            <img class="img-fluid m-r-15 rounded-circle" src="{{ articoloPiuVenduto.foto }}" alt="">
                                                        </div>
                                                    </td>
                                                    <td class="p-t-0"><span>{{ articoloPiuVenduto.nome }}</span>
                                                        <p>Cod. {{ articoloPiuVenduto.codice }}</p>
                                                    </td>
                                                    <!--td class="p-t-10"><span>EUR prezzo,00</span>
                                                    </td>
                                                    <td class="p-t-10">
                                                        <p>punti PC</p>
                                                    </td>-->
                                                </tr>
                                                <tr>
                                                    <td colspan="4">
                                                        <hr/>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- endregion TOP5 -->
                    <!-- region Carriera -->
                    <div class="col-xl-4 xl-50 news box-col-6">
                        <div class="card height_100">
                            <div id="reorder_header" class="card-header">
                                <div class="header-top">
                                    <h5 class="m-0">{% trans %}Acquistati di recente{% endtrans %}</h5>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="our-product">
                                    <div class="table-responsive">
                                        <table id="reorder-products" class="table table-bordernone table-td-vertical-align-middle">
                                            <div class="m-t-20"></div>
                                            <tbody class="f-w-500">
                                            {% for ultimoArticoloVenduto in ultimiArticoliVenduti %}
                                                <tr>
                                                    <td>
                                                        <div class="media">
                                                            <img class="img-fluid m-r-15 rounded-circle" src="{{ ultimoArticoloVenduto.foto }}" alt="">
                                                        </div>
                                                    </td>
                                                    <td class="p-t-0"><span>{{ ultimoArticoloVenduto.nome }}</span>
                                                        <p>Cod. {{ ultimoArticoloVenduto.codice }}</p>
                                                    </td>
                                                    <!--td class="p-t-10">
                                                        <span>EUR prezzo,00</span></td>
                                                    <td class="p-t-10">
                                                        <p>punti PC</p>
                                                    </td-->
                                                </tr>
                                                <tr>
                                                    <td colspan="4">
                                                        <hr/>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- endregion Carriera -->
                    <!-- region Sponsor -->
                    <div class="col-xl-4 xl-50 news box-col-6">
                        {{ account(superiore, 'sponsor',app.request.locale()) }}
                    </div>
                    <!-- endregion Sponsor -->
                </div>
            </div>
        </div>
        <!-- Container-fluid Ends-->
    </div>
    <!-- Container-fluid Ends-->
{% endblock page_body %}

