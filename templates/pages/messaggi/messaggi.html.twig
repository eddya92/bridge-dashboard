{% endblock css_page %}

{% block page_body %}
    <div class="page-body">
        <!-- region titolo e breadcrumb -->
        <div class="container-fluid">
            <div class="page-title">
                <div class="row">
                    <div class="col-sm-6 order-sm-1">
                        <div class="mb-3 d-block d-sm-none"></div>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('ingresso') }}"><i data-feather="home"></i></a>
                            </li>
                            <li class="breadcrumb-item">{% trans %}Virtual Office{% endtrans %}</li>
                            <li class="breadcrumb-item active">{% trans %}Messaggi{% endtrans %}</li>
                        </ol>
                        <div class="mb-2 d-block d-sm-none"></div>
                    </div>
                    <div class="col-sm-6 order-sm-0">
                        <div class="float-sm-start">
                            <h3>{% trans %}Messaggi{% endtrans %}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- endregion Titolo e breadcrumb -->
        <!-- Container-fluid starts-->
        <div class="container-fluid">
            {% include 'layouts/partials/session_message.html.twig' %}

            <div class="row">
                <div class="col-xl-6 set-col-12 box-col-12">
                    {% if ultimoMessaggio | length > 0 %}
                        <a href="{{ path('messaggio',{id: ultimoMessaggio.id }) }}">
                            <div class="card">
                                <div class="blog-box blog-shadow" style="height: 390px; background-image: url({{ ultimoMessaggio.Foto }}); background-repeat: no-repeat; background-position: center center; background-size: cover;">
                                    <div class="blog-details">
                                        <p>{{ ultimoMessaggio.data | date('d/m/Y') }}</p>
                                        <h4>{{ ultimoMessaggio.titolo }}</h4>
                                        <ul class="blog-social">
                                            <li><i class="icofont icofont-user"></i>{{ ultimoMessaggio.mittente }}</li>
                                            {% if ultimoMessaggio.daLeggere %}
                                                <li><i class="icofont icofont-star"></i>{% trans %}da leggere{% endtrans %}</li>
                                            {% else %}
                                                <li><i class="icofont icofont-check"></i>{% trans %}già letto{% endtrans %}</li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </a>
                    {% else %}
                        <p>{% trans %}Non ci sono ancora messaggi da leggere.{% endtrans %}</p>
                    {% endif %}
                </div>
                <div class="col-xl-6 set-col-12 box-col-12">
                    {% if penultimoMessaggio | length > 0 %}
                        <a href="{{ path('messaggio',{id: penultimoMessaggio.id }) }}">
                            <div class="card">
                                <div class="blog-box blog-list row">
                                    <div class="col-sm-5 p-l-25">
                                        <div class="top-radius-blog" style="height: 150px; background-image: url({{ penultimoMessaggio.foto }}); background-repeat: no-repeat; background-position: center center; background-size: cover;">
                                            <img class="img-fluid sm-100-w" src="{{ penultimoMessaggio.foto }}" alt="" style="visibility: hidden;">
                                        </div>
                                    </div>
                                    <div class="col-sm-7">
                                        <div class="blog-details">
                                            <div class="blog-date">
                                                <span>{{ penultimoMessaggio.data | date('d') }}</span> {{ penultimoMessaggio.data | date('m/Y') }}
                                            </div>
                                            <h6>{{ penultimoMessaggio.titolo }}</h6>
                                            <div class="blog-bottom-content">
                                                <ul class="blog-social">
                                                    <li>{% trans %}da{% endtrans %}: {{ penultimoMessaggio.mittente }}</li>
                                                    {% if ultimoMessaggio.daLeggere %}
                                                        <li><i class="icofont icofont-star"></i>{% trans %}da leggere{% endtrans %}</li>
                                                    {% else %}
                                                        <li><i class="icofont icofont-check"></i>{% trans %}già letto{% endtrans %}</li>
                                                    {% endif %}
                                                </ul>
                                                <hr class="m-b-5">
                                                <p class="mt-0 m-b-5">
                                                    {% if penultimoMessaggio.testo|striptags|raw|length > 100 %}
                                                        {{ penultimoMessaggio.testo|striptags|slice(0,100)|raw }} ...
                                                    {% else %}
                                                        {{ penultimoMessaggio.testo|striptags|raw }}
                                                    {% endif %}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    {% endif %}
                    {% if terzultimoMessaggio | length > 0 %}
                        <a href="{{ path('messaggio',{id: terzultimoMessaggio.id }) }}">
                            <div class="card">
                                <div class="blog-box blog-list row">
                                    <div class="col-sm-5 p-l-25">
                                        <div class="top-radius-blog" style="height: 150px; background-image: url({{ terzultimoMessaggio.foto }}); background-repeat: no-repeat; background-position: center center; background-size: cover;">
                                            <img class="img-fluid sm-100-w" src="{{ terzultimoMessaggio.foto }}" alt="" style="visibility: hidden;">
                                        </div>
                                    </div>
                                    <div class="col-sm-7">
                                        <div class="blog-details">
                                            <div class="blog-date">
                                                <span>{{ terzultimoMessaggio.data | date('d') }}</span> {{ terzultimoMessaggio.data | date('m/Y') }}
                                            </div>
                                            <h6>{{ terzultimoMessaggio.titolo }}</h6>
                                            <div class="blog-bottom-content">
                                                <ul class="blog-social">
                                                    <li>{% trans %}da{% endtrans %}: {{ terzultimoMessaggio.mittente }}</li>
                                                    {% if terzultimoMessaggio.daLeggere %}
                                                        <li><i class="icofont icofont-star"></i>{% trans %}da leggere{% endtrans %}</li>
                                                    {% else %}
                                                        <li><i class="icofont icofont-check"></i>{% trans %}già letto{% endtrans %}</li>
                                                    {% endif %}
                                                </ul>
                                                <hr class="m-b-5">
                                                <p class="mt-0 m-b-5">
                                                {% if terzultimoMessaggio.testo|striptags|raw|length > 100 %}
                                                    {{ terzultimoMessaggio.testo|striptags|slice(0,100)|raw }} ...
                                                {% else %}
                                                    {{ terzultimoMessaggio.testo|striptags|raw }}
                                                {% endif %}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    {% endif %}
                </div>
                <div class="row" id="other_news">
                {% for messaggio in messaggi %}
                    <div class="col-md-6 col-xl-3 box-col-6">
                        <a href="{{ path('messaggio',{id: messaggio.id }) }}">
                            <div class="card">
                                <div class="blog-box blog-grid text-center">
                                    <div class="top-radius-blog" style="height: 150px; background-image: url({{ messaggio.foto }}); background-repeat: no-repeat; background-position: center center; background-size: cover;">
                                        <img class="img-fluid" src="{{ messaggio.foto }}" alt="" style="visibility: hidden;">
                                    </div>
                                    <div class="blog-details-main">
                                        <ul class="blog-social">
                                            <li>{{ messaggio.data | date('d/m/Y') }}</li>
                                            <li>{% trans %}da{% endtrans %}: {{ messaggio.mittente }}</li>
                                            {% if messaggio.daLeggere %}
                                                <li><i class="icofont icofont-star"></i>{% trans %}da leggere{% endtrans %}</li>
                                            {% else %}
                                                <li><i class="icofont icofont-check"></i>{% trans %}già letto{% endtrans %}</li>
                                            {% endif %}
                                        </ul>
                                        <hr>
                                        <h6 class="blog-bottom-details resize_equal_height_md resize_equal_height_lg resize_equal_height_xl resize_equal_height_xxl">{{ messaggio.titolo }}</h6>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
        <!-- Container-fluid Ends-->
    </div>

{% endblock page_body %}

