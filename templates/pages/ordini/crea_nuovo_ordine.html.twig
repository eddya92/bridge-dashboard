                                                            <h5 class="title_0 h5equalHeight">{{ store.insegna }}
                                                            </h5>
                                                        </div>
                                                        <div class="text-center ">
                                                            {% if store.tipiOrdine|length == 1 and store.tipiOrdine|first.tipo == 'Ordine personale' %}
