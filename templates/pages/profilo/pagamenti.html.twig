    <link rel="stylesheet" type="text/css" href="../assets/css/responsive.css">
{% endblock css_page %}

{% block page_body %}
    <div class="page-body">
        <!-- region titolo e breadcrumb -->
        <div class="container-fluid">
            <div class="page-title">
                <div class="row">
                    <div class="col-sm-6 order-sm-1">
                        <div class="mb-3 d-block d-sm-none"></div>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('ingresso') }}"><i data-feather="home"></i></a>
                            </li>
                            <li class="breadcrumb-item">{% trans %}Virtual Office{% endtrans %}</li>
                            <li class="breadcrumb-item active">{% trans %}Profilo{% endtrans %} / {% trans %}Pagamenti{% endtrans %}</li>
                        </ol>
                        <div class="mb-2 d-block d-sm-none"></div>
                    </div>
                    <div class="col-sm-6 order-sm-0">
                        <div class="float-sm-start">
                            <h3>{% trans %}Profilo{% endtrans %} / {% trans %}Pagamenti{% endtrans %}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- endregion Titolo e breadcrumb -->
        <!-- Container-fluid starts-->
        <div class="container-fluid">
            {% include 'layouts/partials/session_message.html.twig' %}

            <div class="edit-profile">
                <div class="row" id="row_data">
                    <div class="col-xl-4"
                            {% if inquadramentoFiscale == true %}

                            {% else %}
                                hidden
                            {% endif %}

                    >
                        <!-- region Inquadramento fiscale -->
                        <div class="resize_equal_height resize_equal_height_xl resize_equal_height_xxl card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">{% trans %}Inquadramento fiscale{% endtrans %}</h5>
                                <div class="card-options">
                                    <a class="card-options-collapse" href="#" data-bs-toggle="card-collapse">
                                        <i class="fe fe-chevron-up"></i>
                                    </a>
                                    <a class="card-options-remove" href="#" data-bs-toggle="card-remove">
                                        <i class="fe fe-x"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <h5 class="card-title mb-0">{{ inquadramento.nome }}</h5>
                                    <p>{{ inquadramento.descrizione|raw }}
                                    </p>
                                    <div class="m-t-10"></div>
                                    <p>{% trans %}Inquadramento fiscale descrizione{% endtrans %}
                                        <a href="mailto:{{ inquadramento.emailAzienda }}">{{ inquadramento.emailAzienda }}</a>
                                    </p>
                                    <div class="m-t-40"></div>
                                </div>
                            </div>
                        </div>
                        <!-- endregion Dati generali -->
                    </div>
                    <div {{ inquadramentoFiscale == true ? 'class="col-xl-8"' : 'class="col-xl-12"'}} >
                        <form class="form card needs-validation" novalidate="" method="post" action="{{ path('aggiorna-dati-pagamento') }}">
                            <div class="resize_equal_height resize_equal_height_xl resize_equal_height_xxl">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">{% trans %}Pagamento delle commissioni{% endtrans %}</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <h5>{% trans %}Dati bancari{% endtrans %}</h5>
                                        <p>{% trans %}Dati bancari descrizione{% endtrans %}</p>
                                        <div {{ inquadramentoFiscale == true ? 'class="col-sm-12""' : 'class="col-sm-6"'}}>
                                            <div class="mb-3">
                                                <label class="form-label">{% trans %}IBAN{% endtrans %}</label>
                                                <input class="form-control" id="iban" type="text" required name="iban" value="{{ inquadramento.iban }}">
                                                <div class="invalid-feedback">{% trans %}Specificare IBAN{% endtrans %}</div>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">{% trans %}BIC SWIFT{% endtrans %}</label>
                                                <input class="form-control" id="bankCode" type="text" name="bankCode" value="{{ inquadramento.bankCode }}">
                                                <div class="invalid-feedback">{% trans %}Specificare BIC SWIFT{% endtrans %}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button id="btn_submit" class="btn btn-primary" type="submit">{% trans %}Aggiorna dati{% endtrans %}</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Container-fluid Ends-->
    </div>

{% endblock page_body %}

